<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Symfony blog{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    </head>
    <body id="app">
        <header>
            {% set browsers = session_helper.getBrowsersQuantity() %}
            <ul>
                {% for browser, quantity in browsers %}
                    <li><strong>{{ browser|capitalize }}:</strong> {{ quantity }}</li>
                {% endfor %}
            </ul>
        </header>
        <div class="container">
        {% block content %}{% endblock %}
        </div>
        <script src="{{ asset('build/app.js') }}"></script>
    </body>
</html>
